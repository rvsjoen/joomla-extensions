<extension type="module" version="1.7.0" method="upgrade">
	<name>RVS QuickResponse</name>
	<creationDate>August 2011</creationDate>
		<author>Rune V. Sjøen</author>
		<authorEmail>rvsjoen@gmail.com</authorEmail>
		<authorUrl>http://www.twilight-zone.com</authorUrl>
		<copyright>Rune V. Sjøen</copyright>
		<license>GNU/GPL</license>
		<version>1.0</version>
	<description>MOD_RVS_QUICKRESPONSE_XML_DESCRIPTION</description>
	<files>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>include</folder>
		<filename module="mod_rvs_quickresponse">mod_rvs_quickresponse.php</filename>
		<filename>mod_rvs_quickresponse.xml</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="size"
					type="list"
					label="MOD_RVS_QUICKRESPONSE_FIELD_SIZE_LABEL"
					default="128">
					<option value="64">MOD_RVS_QUICKRESPONSE_SIZE_SMALL</option>
					<option value="128">MOD_RVS_QUICKRESPONSE_SIZE_MEDIUM</option>
					<option value="256">MOD_RVS_QUICKRESPONSE_SIZE_LARGE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
